{{>layout/header}}
<h1>
  로그인 화면
</h1>
<div class="col-md-12">
  <div class="col-md-3">
    <form action="/loginProcess/login" method="post">
      <div class="form-group">
        <label>아이디</label>
        <input type="text" class="form-control" id="username" placeholder="ID">
      </div>
      <div class="form-group">
        <label>비밀번호</label>
        <input type="text" class="form-control" id="password" placeholder="PASSWORD">
      </div>
    </form>
  </div>
  <div class="col-md-6">
    <h2>
      <div class="row">
        <a href="/oauth2/authorization/google" class="btn btn-success active" role="button">google login</a>
      </div>
      <br>
      <div class="row">
        <a href="/login/register">회원가입</a>
      </div>
    </h2>
  </div>
</div>
{{>layout/footer}}
