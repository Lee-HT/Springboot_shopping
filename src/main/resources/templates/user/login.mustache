{{>layout/header}}
<h1>
  로그인 화면
</h1>
<div class="col-md-12">
  <div class="col-md-6">
    <form action="/loginProcess/login" method="post">
      <div class="form-group">
        <label>아이디</label>
        <input type="text" class="form-control" id="username" placeholder="ID">
      </div>
      <div class="form-group">
        <label>비밀번호</label>
        <input type="text" class="form-control" id="password" placeholder="PASSWORD">
      </div>
    </form>
  </div>
  <div class="col-md-6">
    <h1>
      <a href="/login/register">회원가입</a>
    </h1>
  </div>
</div>
{{>layout/footer}}
